
extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Update Record
    
        // register form
        form(method='POST' action=`/kittens/${id}` enctype="application/x-www-form-urlencoded")
          input(type='hidden',value='PUT',name='_method')
          div.form-group
            div
              label(for='name') Name : 
              input#name.form-control(type='text', placeholder='Please Enter Kitten Name' name='name' value=`${title}`)
            br
            div
              label(for='age') Age : 
              input#age.form-control(type='text', placeholder='Please Enter Kitten Age' name='age' value=`${age}`)
            p 
            button.btn.btn-primary(type="submit") Update 
            p
            a(href="/kittens/admin")
                button(type="button") Cancel
    block footer
      script(type='text/javascript' src='/javascripts/jquery-3.3.1.min.js')
      script(type='text/javascript' src='/javascripts/functions.js')
