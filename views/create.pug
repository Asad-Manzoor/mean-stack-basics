
extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Create Record

        // register form
        form(method='POST' action='/kittens/')
          div.form-group
            div
              label(for='name') Name : 
              input#name.form-control(type='text', placeholder='Please Enter Kitten Name' name='name')
            br
            div
              label(for='age') Age : 
              input#age.form-control(type='text', placeholder='Please Enter Kitten Age' name='age')
            p 
            button.btn.btn-primary(type='submit') Create 
            p
            a(href="/kittens/admin")
                button(type="button") Cancel
                